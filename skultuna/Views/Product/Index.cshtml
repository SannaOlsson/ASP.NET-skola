@model List<skultuna.Models.Product>
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
    <title>Title of the document</title>
</head>
<body>
    <ul>
  		<li><a href="~/Home/Index">Skultuna</a></li>
  		<li><a href="~/Product/Index">Produkter</a></li>
  		<li style="float:right"><a href="~/User/Index">Logga In</a></li>
        <li style="float:right">@Html.ActionLink("Logga ut", "SignOut", "User")</li>
        <li style="float:right"><a href="~/Admin/Index">Admin</a></li>
	</ul>

    <h1>Produkter</h1>

    <table border="1">
        <thead>
            <tr>
                <td>Namn</td>
                <td>Beskrivning</td>
                <td>Pris</td>
            </tr>
        </thead>

        <!-- Loopar igenom produkterna och skriver ut de -->
        @foreach(var product in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => product.Name)</td>
                <td>@Html.DisplayFor(modelItem => product.Description)</td>
                <td>@Html.DisplayFor(modelItem => product.Price)</td>
            </tr>
        }
    </table>
    <br />
    @Html.ActionLink("Lägg till fler produkter", "Create")
</body>
</html>